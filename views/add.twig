{% extends 'layout.twig' %}
{% block header %}
    {% include 'header.twig' %}
{% endblock %}

{% block body %}
    <section id="add">
        <form enctype="multipart/form-data" method="post">
            <h1>Ajouter une définition</h1>
            <div class="parent-group">
                <div class="group3">
                    <input type="file" name="file" id="file" class="inputfile" multiple required/>
                    <label for="file">
                        <img src="/img/image.png" alt="">
                    </label>
                    <div id="info-file">
                        <p>choisi ta photo de definition</p>
                    </div>
                </div>
            </div>
            <div class="custom-dropdown custom-dropdown--blue">
                <select class="custom-dropdown__select custom-dropdown__select--blue" name="univer" required>
                    <option value="null">Choisissez l'univers de votre mot</option>
                    {% for univer in univers %}
                        <option value="{{ univer.id }}">{{ univer.title }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="group">
                <input type="text" name="name" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Mot</label>
                </div>
            <div class="group-def">
                <label>Definition</label>
                <textarea name="definition" required></textarea>
            </div>
            <button type="submit"><img src="/img/arrow.png" alt="flèche"></button>
        </form>
    </section>
{% endblock %}
{% block javascript %}
<script src="/js/add.js"></script>
{% endblock %}